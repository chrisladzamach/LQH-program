---

interface Props {
  name: string;
  href: string
}

const { name, href } = Astro.props
---
<article class="flex items-center justify-between pt-2 px-2">
  <a
    href={href}
    class="sticky top-0 flex gap-2 h-full py-2 px-3 items-center justify-center rounded-xl bg-zinc-600 text-white transition hover:bg-neutral-800 font-bolt"
  >
    <svg viewBox="0 0 16 6" aria-hidden="true" class="w-4 transform rotate-180">
      <path
        fill="currentColor"
        fill-rule="evenodd"
        clip-rule="evenodd"
        d="M16 3 10 .5v2H0v1h10v2L16 3Z"
      >
      </path>
    </svg>
    Back
  </a>
  <h1 class="text-3xl text-yellow-300 font-light tracking-wide">{name}</h1>
</article>
<hr class="my-4 text-zinc-600" />


---
interface ButtonMenuProps {
  title: string;
  href: string;
  class?: string;
}

const { title, href, class: userClass } = Astro.props;

const defaultClass = "text-black font-bold py-2 px-2 bg-blue-500 rounded-sm";
const finalClass = userClass ?? defaultClass;
---

<a class={finalClass} href={href}>
  {title}
</a>

---
// Importa tu ícono
import Arrow from "../icons/Arrow.astro";

// Tipado de props
interface ButtonMenuProps {
  title: string;
  koreanTitle: string;
  icon: string;
  href: string;
  class?: string;
}

const { title, koreanTitle, icon, href, class: userClass } = Astro.props;

// Clases por defecto
const defaultClass = "w-full justify-between items-center py-6 px-4 text-left hover:bg-blue-700/50 transition-colors rounded-none bg-blue-500 text-white font-medium";
const finalClass = userClass ?? defaultClass;
---
<!-- Botón tipo técnica -->
<a class={`relative overflow-hidden flex items-center justify-between ${finalClass}`} href={href}>
  <div class="flex items-center gap-3 z-10">
    <div class="bg-yellow-500/20 p-2 rounded-full text-yellow-500">
      <span class="text-xl">{icon}</span>
    </div>
    <div>
      <p>{title}</p>
      <p class="text-sm text-gray-200">{koreanTitle}</p>
    </div>
  </div>
  <span class="pr-3 z-10">
    <Arrow class="size-5 text-zinc-200" />
  </span>
</a>

---
import Layout from '../layouts/Layout.astro';
import ButtonMenu from '../components/ButtonMenu.astro';
---
<Layout>
	<section class="flex flex-col max-h-screen p-0">
		<figure class="flex items-center justify-center my-4">
			<img src="/public/logoJDK.png" alt="Logo of LQH" class="size-40 rounded-full border-4 border-black" />
		</figure>
		<h1 class="text-2xl font-bold text-center">Welcome to the LQH program website</h1>
		<p class="mt-4 text-center">You can find all items of program here, select and option that you need see to learn.</p>
		<hr class="my-4 text-zinc-600" />
		<article class="flex flex-col gap-2">
			<ButtonMenu title="Ho Shin Sul (호신술)" href="/hoShinSul" />
			<ButtonMenu title="Poomsaes (품새)" href="/poomsaes" />
			<ButtonMenu title="Mugi Poomsaes (무기 품새)" href="/mugiPoomsaes" />
			<ButtonMenu title="Chase (기본)" href="/chases" />
			<ButtonMenu title="Mugi Chase (기본 무기)" href="/mugiChase" />
		</article>
	</section>
</Layout>

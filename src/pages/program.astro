---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import AltGradeCard from "../components/AltGradeCard.astro";

const links = [
  { title: "Blanco", href: "/grades/blanco" },
  { title: "Amarillo", href: "/grades/amarillo" },
  { title: "Naranja", href: "/grades/naranja" },
  { title: "Verde", href: "/grades/verde" },
  { title: "Azul", href: "/grades/azul" },
  { title: "Purpura", href: "/grades/purpura" },
  { title: "Rojo", href: "/grades/rojo" },
  { title: "Rojo Marrón", href: "/grades/rojoMarron" },
  { title: "Marrón", href: "/grades/marron" },
  { title: "Marrón Negro", href: "/grades/marronNegro" },
  { title: "Negro |", href: "/grades/negro1Dan" },
  { title: "Negro ||", href: "/grades/negro2Dan" },
  { title: "Negro |||", href: "/grades/negro3Dan" },
  { title: "Negro ||||", href: "/grades/negro4Dan" },
  { title: "Negro |||||", href: "/grades/negro5Dan" },
];
---

<Layout>
  <Header name="Program" href="/" />
  <section class="flex flex-col gap-2">
    {links.map((link) => <AltGradeCard title={link.title} href={link.href} />)}
    <hr />
    <hr />
  </section>
</Layout>
